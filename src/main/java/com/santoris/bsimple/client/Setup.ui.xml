                    <ul>
                        <li><a href="http://gwtbootstrap.github.com/gwt-bootstrap/apidocs/index.html">Javadoc</a></li>
                    </ul>
                </g:HTMLPanel>
            </b:Column>
        </b:Row>
    </g:HTMLPanel>
